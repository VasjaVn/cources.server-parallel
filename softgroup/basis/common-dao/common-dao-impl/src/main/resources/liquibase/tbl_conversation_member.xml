<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns='http://www.liquibase.org/xml/ns/dbchangelog'
                   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                   xsi:schemaLocation='http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd'>

    <changeSet id="1" author="v">
        <createTable tableName="tbl_conversation_member">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="conversation_id" type="varchar(36)" />
            <column name="user_id" type="varchar(36)" />
            <column name="last_message_index" type="bigint" />
            <column name="is_deleted_user" type="boolean" />
            <column name="join_date_user" type="bigint" />
        </createTable>
    </changeSet>
</databaseChangeLog>